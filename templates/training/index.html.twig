{% extends 'base.html.twig' %}

{% block title %}Training index{% endblock %}

{% block body %}

    <div class="d-flex justify-content-between mb-2">
        <a href="{{ path('home_coach')}}" class="btn btn-danger">
            <i class="fas fa-caret-left"></i> Retour Espace Coaching</a>
