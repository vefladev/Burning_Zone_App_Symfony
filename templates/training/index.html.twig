                <td><strong>{{ training.startedAt ? training.startedAt|date('d/m/Y H:i') : '' }}</strong></td>
                <td><strong>{{ training.endedAt ? training.endedAt|date('d/m/Y H:i') : '' }}</strong></td>
                <td><strong>{{ training.coach.prenom|capitalize }}</strong></td>
                <td><strong>{{ training.userNom.prenom|capitalize }} <br> {{ training.userNom.nom|upper }}</strong></td>
