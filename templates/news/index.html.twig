{% extends 'base.html.twig' %}

{% block title %}Les News Burning Zone{% endblock %}

{% block body %}
<div>
    <h1> Les News Burning Zone </h1>

    <div class="row mt-4">
        {% for post in posts  %}
            {# {% if post.published %} #}

                <div class="col-6">

                    <div class="card mb-3 {% if loop.first %}text-white bg-success {% endif%}">
                        <h6>Le {{ post.createdAt|date("d-m-Y")}}</h6>
                        <h3 class="card-header">{{ post.title }}</h3>
                        <div class="card-body">
                        <p>{{ post.content }}</p>
                        
                        
                            <img src="{{ vich_uploader_asset(post,'imageFile') }}" alt="{{ post.title }}" id="postImage">
                  
                            {# <h5 class="card-title">
                                <a class="btn btn-outline-warning" href="{{ url('blog_category',{id: post.category.id }) }}">{{ post.category.title }}</a>
                            </h5> #}

                        </div>
                        {# {% if post.image is not null %}
                            <img src="{{ post.image }}" alt="{{ post.title }}" class="">
                        {% endif %}
                        <div class="card-body">
                            <div class="card-text">
                                {{ post.getExtrait(25) }}
                            </div>
                        </div>

                        <div class="card-body">
                            <a href="{{ url('blog_show', {id: post.id}) }}" class="card-link">Read more &rarr;</a>
                        </div>
                        {% if post.tags %}
                            <ul class="list-group list-group-flush">
                                {%  for tag in post.tags %}
                                    <li class="list-group-item">
                                        <a href="{{ url('blog_tag', {id: tag.id}) }}" class="text-info">{{ tag.title }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                        <div class="card-footer text-muted">
                            {{ post.createdAt|date("d-m-Y") }}
                        </div> #}
                    </div>
                </div>
            {# {% endif %} #}
        {% else %}
            <h3>No post :(</h3>
        {% endfor %}
    </div>
    {# {% if total != 1 %}
        <div class="m-4">
            <ul class="pagination  justify-content-center">
                <li class="page-item {% if page == 1 %}disabled{% endif %}">
                    <a class="page-link" href="{{ url('blog',{page: page-1}) }}">&laquo;</a>
                </li>
                {% for i in 1..total %}
                    <li class="page-item {% if page == i %}active {% endif %}">
                        <a class="page-link" href="{{ url('blog',{page: i}) }}">{{ i }}</a>
                    </li>
                {% endfor %}

                <li class="page-item {% if page == total %}disabled{% endif %}">
                    <a class="page-link" href="{{ url('blog',{page: page+1}) }}">&raquo;</a>
                </li>
            </ul>
        </div>
    {% endif %} #}
</div>
{% endblock %}