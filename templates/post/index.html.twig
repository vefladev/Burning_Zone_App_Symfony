{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
<div class="col-12" style="margin-top: 50px; margin-bottom: 50px;">
    <h1>Liste des Post</h1>

    <table class="table">
        <thead>
            <tr>
                <th>NÂ°</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Date de Mise en Ligne</th>
                <th>Image</th>
                {# <th>UpdatedAt</th> #}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d') : '' }}</td>
                <td>{{ post.imageName }}</td>
                {# <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td> #}
                <td>
                    <a href="{{ path('post_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('post_new') }}">Ecrire un nouveau Post</a>
</div>
{% endblock %}